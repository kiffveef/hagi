{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{"type": "command", "command": "bash .claude/hooks/check-claude-git.sh"}]
      }
    ]
  },
  "permissionMode": "acceptEdits",
  "permissions": {
    "deny": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/.ssh/**)",
      "Write(.env*)",
      "Write(**/.env*)",
      "Bash(wget:*)"
    ],
    "allow": [
      "Read(**)",
      "Edit(**/*.rs)",
      "Edit(**/*.toml)",
      "Edit(**/*.md)",
      "Edit(**/*.json)",
      "Edit(**/*.sql)",
      "Write(/tmp/**)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git show:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",
      "Bash(git tag:*)",
      "Bash(cargo:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(bat:*)",
      "Bash(npx:*)",
      "Bash(uv:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "mcp__sqlite__*",
      "mcp__file-search__*",
      "mcp__serena__*",
      "mcp__context7__*",
      "mcp__one-search__*",
      "mcp__memory__*",
      "mcp__git__*",
      "mcp__github__*",
      "WebSearch",
      "WebFetch"
    ]
  },
  "language": "japanese",
  "respectGitignore": true,
  "alwaysThinkingEnabled": true,
  "spinnerTipsEnabled": true
}
