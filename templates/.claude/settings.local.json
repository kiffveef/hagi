{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{"type": "command", "command": "bash .claude/hooks/check-claude-git.sh"}]
      }
    ]
  },
  "permissionMode": "acceptEdits",
  "permissions": {
    "deniedTools": [
      "Bash(rm -f:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(git push upstream:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git rebase -i:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/.ssh/**)",
      "Write(.env*)",
      "Write(**/.env*)",
      "Bash(wget:*)"
    ],
    "allowedTools": [
      "Read(**)",
      "Edit(**/*.rs)",
      "Edit(**/*.toml)",
      "Edit(**/*.md)",
      "Edit(**/*.json)",
      "Edit(**/*.sql)",
      "Write(/tmp/**)",
      "Bash(git *)",
      "Bash(cargo *)",
      "Bash(rg *)",
      "Bash(fd *)",
      "Bash(bat *)",
      "Bash(npx *)",
      "Bash(uv *)",
      "Bash(jq *)",
      "Bash(rm -r target/*)",
      "Bash(rm -r node_modules/*)",
      "Bash(rm -r dist/*)",
      "Bash(rm -r /tmp/*)",
      "Bash(curl *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "mcp__sqlite__*",
      "mcp__file-search__*",
      "mcp__serena__*",
      "mcp__context7__*",
      "mcp__one-search__*",
      "mcp__memory__*",
      "mcp__sequential-thinking__*",
      "mcp__git__*",
      "mcp__github__*",
      "WebSearch",
      "WebFetch"
    ]
  },
  "language": "japanese",
  "respectGitignore": true,
  "alwaysThinkingEnabled": true,
  "spinnerTipsEnabled": true
}
